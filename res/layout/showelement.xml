<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:columnCount="3" android:rowCount="5" android:padding="20dp"
            tools:context=".ShowChild">

    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText" android:layout_row="0" android:layout_column="0" android:hint="Name:"
            android:editable="false" android:enabled="false"
            android:layout_marginLeft="50dp"/>
    <EditText android:layout_width="200dp" android:layout_height="wrap_content" android:id="@+id/editText2"
              android:layout_row="1" android:layout_column="0" android:hint="SurName:" android:editable="false"
              android:enabled="false"
              android:layout_marginLeft="50dp"/>
    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/NameTxt"
              android:layout_row="0" android:layout_column="1"/>
    <EditText android:layout_width="200dp" android:layout_height="wrap_content" android:id="@+id/editText3"
              android:layout_row="2" android:layout_column="0" android:hint="Age:" android:editable="false"
              android:enabled="false" android:layout_marginLeft="50dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AgeTxt" android:layout_row="2" android:layout_column="1"/>
    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/SurNameTxt"
              android:layout_row="1" android:layout_column="1"/>
    <Button
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnOk" android:layout_row="4" android:layout_column="0" android:hint="Ok"
            android:text="@string/bntOkCaption" android:selectAllOnFocus="false" android:onClick="OnOkClick"/>

</GridLayout>